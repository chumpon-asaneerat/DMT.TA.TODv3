<UserControl x:Class="DMT.TOD.Pages.TollAdmin.EMVQRCodeListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrl="clr-namespace:DMT.Controls.Buttons;assembly=DMT.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit"
             d:DesignHeight="450"
             d:DesignWidth="1000"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d">
    <UserControl.Resources>
        <!--  IMAGE BUTTON STYLE  -->
        <sys:Double x:Key="ImageButtonWidth">250</sys:Double>
    </UserControl.Resources>
    <Grid Background="DimGray">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{StaticResource PageMargin}" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="{StaticResource PageMargin}" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="{StaticResource PageMargin}" />
                <RowDefinition Height="*" />
                <RowDefinition Height="{StaticResource PageMargin}" />
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="1"
                       Grid.Column="1"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch">
                <!--  BUTTONS  -->
                <DockPanel Height="60"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           DockPanel.Dock="Bottom">
                    <Grid Width="5" DockPanel.Dock="Right" />
                    <ctrl:ImageButton x:Name="cmdBack"
                                      Click="cmdBack_Click"
                                      DockPanel.Dock="Right"
                                      ImageSource="/DMT.TOD.App;component/Images/Button/Home.png">
                        <TextBlock Style="{StaticResource ImageButtonText}" Text="กลับสู่หน้าจอหลัก" />
                    </ctrl:ImageButton>
                    <Grid />
                </DockPanel>
                <!--  WORK AREA  -->
                <DockPanel LastChildFill="True">
                    <!--  PAYMENT FILTER PANEL  -->
                    <DockPanel Height="70"
                               Margin="10,0"
                               VerticalAlignment="Center"
                               DockPanel.Dock="Top"
                               LastChildFill="True">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="3" />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="1"
                                        Grid.Column="0"
                                        Orientation="Horizontal">
                                <TextBlock Width="180"
                                           Style="{StaticResource LabelText}"
                                           Text="ประเภทการชำระเงิน :  "
                                           TextAlignment="Right" />
                                <RadioButton x:Name="rbEMV"
                                             Width="80"
                                             Click="rbEMV_Click"
                                             VerticalAlignment="Center"
                                             Content="EMV"
                                             FontSize="{StaticResource InputFontSize18}"
                                             Foreground="WhiteSmoke"
                                             GroupName="EMVQR"
                                             IsChecked="True"
                                             Style="{StaticResource CommonRadioButton}" />
                                <RadioButton x:Name="rbQRCode"
                                             Width="100"
                                             Click="rbQRCode_Click"
                                             VerticalAlignment="Center"
                                             Content="QR Code"
                                             FontSize="{StaticResource InputFontSize18}"
                                             Foreground="WhiteSmoke"
                                             GroupName="EMVQR"
                                             Style="{StaticResource CommonRadioButton}" />
                            </StackPanel>
                            <StackPanel Grid.Row="3"
                                        Grid.Column="0"
                                        Orientation="Horizontal">
                                <TextBlock Width="180"
                                           Style="{StaticResource LabelText}"
                                           Text="วันที่ทำรายการ :  "
                                           TextAlignment="Right" />
                                <xceed:DateTimePicker x:Name="dtEntryDate"
                                                      Width="175"
                                                      VerticalAlignment="Center"
                                                      CultureInfo="th-TH"
                                                      FontSize="{StaticResource InputFontSize18}"
                                                      Format="Custom"
                                                      ValueChanged="dtEntryDate_ValueChanged"
                                                      FormatString="dd/MM/yyyy"
                                                      ShowButtonSpinner="False"
                                                      TimePickerAllowSpin="False"
                                                      TimePickerShowButtonSpinner="False"
                                                      TimePickerVisibility="Collapsed" />
                                <TextBlock Width="10" />
                                <TextBlock Width="90"
                                           Style="{StaticResource LabelText}"
                                           Text="ช่องทาง :  "
                                           TextAlignment="Right" />
                                <TextBox x:Name="txtLaneNo"
                                         Width="175"
                                         FontSize="{StaticResource InputFontSize18}"
                                         Style="{StaticResource CommonTextBox}" />
                                <TextBlock Width="10" />
                                <Button x:Name="cmdPaymentSearch"
                                        Width="150"
                                        Height="30"
                                        Click="cmdPaymentSearch_Click"
                                        VerticalAlignment="Center"
                                        Content="ค้นหาข้อมูล"
                                        FontSize="{StaticResource InputFontSize18}"
                                        Style="{DynamicResource InlineButton}" />
                                <TextBlock Width="10" />
                                <Button x:Name="cmdPaymentClear"
                                        Width="150"
                                        Height="30"
                                        VerticalAlignment="Center"
                                        Content="เคลียร์"
                                        Click="cmdPaymentClear_Click"
                                        FontSize="{StaticResource InputFontSize18}"
                                        Style="{DynamicResource InlineButton}" />
                            </StackPanel>
                            <Grid Grid.Row="1"
                                  Grid.RowSpan="5"
                                  Grid.Column="3" />
                        </Grid>
                    </DockPanel>
                    <!--  USER FILTER PANEL  -->
                    <DockPanel Height="70"
                               Margin="10,0"
                               VerticalAlignment="Center"
                               DockPanel.Dock="Top"
                               LastChildFill="True">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="3" />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="1"
                                        Grid.Column="0"
                                        Orientation="Horizontal">
                                <TextBlock Width="180"
                                           Style="{StaticResource LabelText}"
                                           Text="ค้นหา รหัสพนักงาน : "
                                           TextAlignment="Right" />
                                <TextBox x:Name="txtSearchUserId"
                                         Width="175"
                                         FontSize="{StaticResource InputFontSize18}"
                                         Style="{StaticResource CommonTextBox}" />
                                <TextBlock Width="10" />
                                <Button x:Name="cmdUserSearch"
                                        Width="150"
                                        Height="30"
                                        Click="cmdUserSearch_Click"
                                        VerticalAlignment="Center"
                                        Content="เลือกพนักงาน"
                                        FontSize="{StaticResource InputFontSize18}"
                                        Style="{DynamicResource InlineButton}" />
                            </StackPanel>
                            <StackPanel Grid.Row="3"
                                        Grid.Column="0"
                                        Orientation="Horizontal">
                                <TextBlock Width="175"
                                           Style="{StaticResource LabelText}"
                                           Text="รหัสพนักงาน : "
                                           TextAlignment="Right" />
                                <TextBlock Width="5" />
                                <TextBox x:Name="txtUserId"
                                         Width="175"
                                         IsReadOnly="False"
                                         Foreground="WhiteSmoke"
                                         Background="Silver"
                                         Style="{StaticResource CommonTextBox}"
                                         TextAlignment="Center"
                                         Text="{Binding UserId}" />
                                <TextBlock Width="10" />
                                <TextBlock Style="{StaticResource LabelText}" Text="ชื่อพนักงาน:" />
                                <Grid Width="5" />
                                <TextBox x:Name="txtUserName"
                                         Width="250"
                                         Foreground="WhiteSmoke"
                                         Background="Silver"
                                         IsReadOnly="False"
                                         TextAlignment="Center"
                                         Style="{StaticResource CommonTextBox}"
                                         Text="{Binding FullNameTH}" />
                            </StackPanel>
                            <Grid Grid.Row="1"
                                  Grid.RowSpan="5"
                                  Grid.Column="3" />
                        </Grid>
                    </DockPanel>
                    <ListView />
                </DockPanel>
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>
