<UserControl x:Class="DMT.TA.Pages.Coupon.CouponHistoryViewPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrl="clr-namespace:DMT.Controls.Buttons;assembly=DMT.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit"
             d:DesignHeight="650"
             d:DesignWidth="1000"
             mc:Ignorable="d">
    <UserControl.Resources>
        <!--  IMAGE BUTTON STYLE  -->
        <sys:Double x:Key="ImageButtonWidth">250</sys:Double>
    </UserControl.Resources>
    <Grid Background="DimGray">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{StaticResource PageMargin}" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="{StaticResource PageMargin}" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="{StaticResource PageMargin}" />
                <RowDefinition Height="*" />
                <RowDefinition Height="{StaticResource PageMargin}" />
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="1"
                       Grid.Column="1"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch">
                <!--  BUTTONS  -->
                <DockPanel Height="60"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           DockPanel.Dock="Bottom">
                    <Grid Width="5" DockPanel.Dock="Left" />
                    <ctrl:ImageButton x:Name="cmdRefresh"
                                      Click="cmdRefresh_Click"
                                      DockPanel.Dock="Left"
                                      ImageSource="/DMT.TA.App;component/Images/Button/Home.png">
                        <TextBlock Style="{StaticResource ImageButtonTextMD}" Text="อ่านข้อมูลคูปองทั้งหมด" />
                        <TextBlock Style="{StaticResource ImageButtonTextMD}" Text="จาก server" />
                    </ctrl:ImageButton>
                    <Grid Width="5" DockPanel.Dock="Right" />
                    <ctrl:ImageButton x:Name="cmdBack"
                                      Click="cmdBack_Click"
                                      DockPanel.Dock="Right"
                                      ImageSource="/DMT.TA.App;component/Images/Button/Home.png">
                        <TextBlock Style="{StaticResource ImageButtonText}" Text="กลับสู่หน้าจอหลัก" />
                    </ctrl:ImageButton>
                    <Grid Width="5" DockPanel.Dock="Right" />
                    <ctrl:ImageButton x:Name="cmdCancel"
                                      Click="cmdCancel_Click"
                                      DockPanel.Dock="Right"
                                      ImageSource="/DMT.TA.App;component/Images/Button/Cancel2.png">
                        <TextBlock Style="{StaticResource ImageButtonText}" Text="ยกเลิก" />
                    </ctrl:ImageButton>
                    <Grid />
                </DockPanel>
                <!--  WORK AREA  -->
                <DockPanel LastChildFill="True">
                    <Border Margin="10,1"
                            Background="CornflowerBlue"
                            BorderBrush="Silver"
                            BorderThickness="1"
                            DockPanel.Dock="Top">
                        <TextBlock Margin="5,3"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource LabelText}"
                                   Text="ประวัติ การขายคูปอง" />
                    </Border>
                    <!--  SEPERATOR  -->
                    <TextBlock Height="10" DockPanel.Dock="Top" />
                    <!--  USER FILTER PANEL  -->
                    <DockPanel Height="150"
                               Margin="10,1"
                               VerticalAlignment="Center"
                               DockPanel.Dock="Top"
                               LastChildFill="True">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="150" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <!--  LINE 1  -->
                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource LabelText}"
                                       Text="รหัสสินค้า : "
                                       TextAlignment="Right" />
                            <TextBox x:Name="txtSAPItemCode"
                                     Grid.Row="1"
                                     Grid.Column="2"
                                     VerticalAlignment="Center"
                                     FontSize="{StaticResource InputFontSize18}"
                                     Style="{StaticResource CommonTextBox}" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="4"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource LabelText}"
                                       Text="เลขที่ใบโอน : "
                                       TextAlignment="Right" />
                            <TextBox x:Name="txtSAPTransferNo"
                                     Grid.Row="1"
                                     Grid.Column="6"
                                     VerticalAlignment="Center"
                                     FontSize="{StaticResource InputFontSize18}"
                                     Style="{StaticResource CommonTextBox}" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="8"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource LabelText}"
                                       Text="ด่านเก็บเงิน : "
                                       TextAlignment="Right" />
                            <ComboBox Name="cbPlzaGroups"
                                      Grid.Row="1"
                                      Grid.Column="10"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Center"
                                      HorizontalContentAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      DisplayMemberPath="PlazaGroupNameTH"
                                      FontSize="{StaticResource InputFontSize18}"
                                      ItemsSource="{Binding}" />
                            <!--  LINE 2  -->
                            <TextBlock Grid.Row="3"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource LabelText}"
                                       Text="Serial No : "
                                       TextAlignment="Right" />
                            <TextBox x:Name="txtSAPIntrSerial"
                                     Grid.Row="3"
                                     Grid.Column="2"
                                     VerticalAlignment="Center"
                                     FontSize="{StaticResource InputFontSize18}"
                                     Style="{StaticResource CommonTextBox}" />
                            <TextBlock Grid.Row="3"
                                       Grid.Column="4"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource LabelText}"
                                       Text="สถานะ : "
                                       TextAlignment="Right" />
                            <ComboBox Name="cbStatus"
                                      Grid.Row="3"
                                      Grid.Column="6"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Center"
                                      HorizontalContentAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      FontSize="{StaticResource InputFontSize18}"
                                      ItemsSource="{Binding}" />
                            <TextBlock Grid.Row="3"
                                       Grid.Column="8"
                                       Style="{StaticResource LabelText}"
                                       Text="เลขที่ AR Invoice : "
                                       TextAlignment="Right" />
                            <TextBox x:Name="txtSAPARInvoice"
                                     Grid.Row="3"
                                     Grid.Column="10"
                                     VerticalAlignment="Center"
                                     FontSize="{StaticResource InputFontSize18}"
                                     Style="{StaticResource CommonTextBox}" />
                            <!--  LINE 3  -->
                            <TextBlock Grid.Row="5"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource LabelText}"
                                       Text="วันที่จ่าย : "
                                       TextAlignment="Right" />
                            <xceed:DateTimePicker x:Name="dtEntryDate"
                                                  Grid.Row="5"
                                                  Grid.Column="2"
                                                  VerticalAlignment="Center"
                                                  AutoCloseCalendar="True"
                                                  FontSize="{StaticResource InputFontSize18}"
                                                  Format="Custom"
                                                  FormatString="dd/MM/yyyy"
                                                  ShowButtonSpinner="False"
                                                  Style="{DynamicResource DMTDateTimePickerStyle}"
                                                  TimePickerAllowSpin="False"
                                                  TimePickerShowButtonSpinner="False"
                                                  TimePickerVisibility="Collapsed" />
                            <xceed:DateTimePicker x:Name="dtEndDate"
                                                  Grid.Row="5"
                                                  Grid.Column="4"
                                                  Grid.ColumnSpan="3"
                                                  Width="150"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  AutoCloseCalendar="True"
                                                  FontSize="{StaticResource InputFontSize18}"
                                                  Format="Custom"
                                                  FormatString="dd/MM/yyyy"
                                                  ShowButtonSpinner="False"
                                                  Style="{DynamicResource DMTDateTimePickerStyle}"
                                                  TimePickerAllowSpin="False"
                                                  TimePickerShowButtonSpinner="False"
                                                  TimePickerVisibility="Collapsed" />

                            <!--
                            <StackPanel Grid.Row="5"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                <TextBlock Width="10" />
                                <TextBlock Width="140"
                                           Style="{StaticResource LabelText}"
                                           Text="กะทำงาน : "
                                           TextAlignment="Right" />
                                <TextBlock Width="10" />
                                <ComboBox x:Name="cbShifts"
                                          Grid.Row="3"
                                          Grid.Column="3"
                                          Width="150"
                                          Margin="5"
                                          VerticalAlignment="Center"
                                          HorizontalContentAlignment="Center"
                                          VerticalContentAlignment="Center"
                                          DisplayMemberPath="ShiftNameTH"
                                          FontSize="{StaticResource InputFontSize18}"
                                          SelectedValuePath="ShiftId"
                                          Style="{StaticResource CommonComboBox}" />
                                <TextBlock Width="10" />
                            </StackPanel>
                            -->
                            <!--
                            <StackPanel Grid.Row="7"
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                <TextBlock Width="110"
                                           Style="{StaticResource LabelText}"
                                           Text="สต็อกคงเหลือ : "
                                           TextAlignment="Right" />
                                <TextBox x:Name="txtStockBalance"
                                         Width="150"
                                         FontSize="{StaticResource InputFontSize18}"
                                         Style="{StaticResource CommonTextBox}" />
                                <TextBlock Width="10" />
                                <Button x:Name="cmdSearch"
                                        Width="150"
                                        Height="30"
                                        VerticalAlignment="Center"
                                        Content="แสดงข้อมูล"
                                        FontSize="{StaticResource InputFontSize18}"
                                        Style="{DynamicResource InlineButton}" />
                                <TextBlock Width="10" />
                            </StackPanel>
                            -->
                        </Grid>
                    </DockPanel>
                    <!--  SEPERATOR  -->
                    <TextBlock Height="10" DockPanel.Dock="Top" />
                    <!--  SEPERATOR (BOTTOM BELOW LISTVIEW)  -->
                    <TextBlock Height="10" DockPanel.Dock="Bottom" />
                    <!--  LIST VIEW  -->
                    <ListView x:Name="grid"
                              Margin="10,1"
                              FontSize="{StaticResource InputFontSize18}"
                              ItemContainerStyle="{StaticResource DMTListViewItemContainer}"
                              ItemsSource="{Binding}"
                              Style="{StaticResource SingleSelectListView}">
                        <!--
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Width="80"
                                                        CellTemplate="{StaticResource SAPItemCode}"
                                                        Header="รหัสสินค้า" />
                                        <GridViewColumn Width="100"
                                                        CellTemplate="{StaticResource SAPIntrSerial}"
                                                        Header="Serial No" />
                                        <GridViewColumn Width="140"
                                                        CellTemplate="{StaticResource SAPTransferNo}"
                                                        Header="เลขที่ใบโอนสินค้า" />
                                        <GridViewColumn Width="200"
                                                        CellTemplate="{StaticResource WorkingDataFrom}"
                                                        Header="วันที่โอนสินค้า" />
                                        <GridViewColumn Width="120"
                                                        CellTemplate="{StaticResource ItemStatusDigit}"
                                                        Header="สถานะรายการ" />
                                        <GridViewColumn Width="120"
                                                        CellTemplate="{StaticResource TollWayId}"
                                                        Header="ด่านเก็บเงิน" />
                                        <GridViewColumn Width="200"
                                                        CellTemplate="{StaticResource WorkingDateTo}"
                                                        Header="วันที่ทำงาน" />
                                        <GridViewColumn Width="80"
                                                        CellTemplate="{StaticResource ShiftId}"
                                                        Header="กะทำงาน" />
                                        <GridViewColumn Width="200"
                                                        CellTemplate="{StaticResource SAPARInvoice}"
                                                        Header="AR Invoice" />
                                    </GridView>
                                </ListView.View>
                        -->
                    </ListView>
                </DockPanel>
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>
