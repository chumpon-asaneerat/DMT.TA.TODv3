<Window x:Class="Wpf.Dynamic.Entry.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ctrl="clr-namespace:DMT.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Wpf Dynamic Entry Sample"
        Width="800"
        Height="450"
        mc:Ignorable="d">
    <DockPanel Margin="10" LastChildFill="True">
        <StackPanel Height="26"
                    DockPanel.Dock="Top"
                    Orientation="Horizontal">
            <Button Width="120" Content="Load" />
            <TextBlock Width="5" />
            <Button Width="120" Content="Gets" />
        </StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ctrl:DynamicEntry Grid.Column="0" Background="AntiqueWhite" />
            <GridSplitter Grid.Column="1"
                          Width="5"
                          HorizontalAlignment="Stretch"
                          ResizeDirection="Columns" />
            <Grid Grid.Column="2" Background="WhiteSmoke" />
        </Grid>
    </DockPanel>
</Window>
