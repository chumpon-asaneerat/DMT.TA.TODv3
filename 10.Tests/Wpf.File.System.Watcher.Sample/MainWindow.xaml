<Window x:Class="Wpf.FileSystemWatchers.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Wpf File System Watcher Sample"
        Width="800"
        Height="450"
        Loaded="Window_Loaded"
        Unloaded="Window_Unloaded"
        mc:Ignorable="d">
    <Window.Resources>
        <sys:Double x:Key="DefaultFontSize18">18</sys:Double>
    </Window.Resources>
    <DockPanel Margin="10" LastChildFill="True">
        <TextBlock Height="5" DockPanel.Dock="Top" />
        <StackPanel Margin="5"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Top"
                    Orientation="Horizontal">
            <TextBlock FontSize="{StaticResource DefaultFontSize18}" Text="File Name :" />
            <TextBlock Width="5" />
            <TextBlock x:Name="txtPath"
                       FontSize="{StaticResource DefaultFontSize18}"
                       Text="" />
            <TextBox x:Name="txtFileName"
                     Width="200"
                     FontSize="{StaticResource DefaultFontSize18}" />
        </StackPanel>
        <StackPanel Margin="5"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Top"
                    Orientation="Horizontal">
            <TextBlock FontSize="{StaticResource DefaultFontSize18}" Text="File Watcher Service :" />
            <TextBlock Width="5" />
            <Button x:Name="cmdStart"
                    Width="100"
                    Click="cmdStart_Click"
                    Content="Start"
                    FontSize="{StaticResource DefaultFontSize18}" />
            <TextBlock Width="5" />
            <Button x:Name="cmdShutdown"
                    Width="100"
                    Click="cmdShutdown_Click"
                    Content="Shutdown"
                    FontSize="{StaticResource DefaultFontSize18}" />
        </StackPanel>
        <TextBlock Height="5" DockPanel.Dock="Bottom" />
        <StackPanel Margin="5"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Bottom"
                    Orientation="Horizontal">
            <Button x:Name="cmdLoad"
                    Width="100"
                    Click="cmdLoad_Click"
                    Content="Load"
                    FontSize="{StaticResource DefaultFontSize18}" />
            <TextBlock Width="5" />
            <Button x:Name="cmdSave"
                    Width="100"
                    Click="cmdSave_Click"
                    Content="Save"
                    FontSize="{StaticResource DefaultFontSize18}" />
        </StackPanel>
        <Grid />
    </DockPanel>
</Window>
